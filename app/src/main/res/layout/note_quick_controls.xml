<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_8dp"
    android:paddingRight="@dimen/default_8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtNoteQuickMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:fontFamily="@string/font_normal"
            android:hint="Add quick note"
            android:inputType="text"
            android:padding="@dimen/default_8dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View style="@style/ViewSeparator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCreateQuickNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_action_notes"
                android:tint="@color/body_text_2" />

            <ImageView
                android:id="@+id/imgAttachImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_action_image_photo"
                android:tint="@color/body_text_2" />

            <ImageView
                android:id="@+id/imgAttachSpeechToText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_action_mic"
                android:tint="@color/body_text_2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d2d2d2" />
    </LinearLayout>

</LinearLayout>