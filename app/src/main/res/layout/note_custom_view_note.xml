<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_8dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingRight="@dimen/default_8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/note_bg_color"
        android:layout_width="match_parent"
        android:padding="@dimen/default_8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:padding="@dimen/default_8dp"
                android:id="@+id/note_memo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:fontFamily="@string/font_normal"
                android:textAppearance="?android:textAppearanceMedium" />

            <ImageView
                android:id="@+id/note_move"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="@dimen/default_8dp"
                android:tint="#414141"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_action_move" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/note_info_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/reminderClock"
                android:src="@drawable/ic_action_alarm"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/note_reminder_status"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:fontFamily="@string/font_condensed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/noteHasAttachment"
                android:src="@drawable/ic_action_file_attachment"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>


    </LinearLayout>

    <View style="@style/ViewSeparator" />
</LinearLayout>